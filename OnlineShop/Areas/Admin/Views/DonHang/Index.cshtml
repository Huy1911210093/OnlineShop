@model IEnumerable<OnlineShop.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="header">
        <h1 class="page-header">
            Đơn hàng
        </h1>
        <ol class="breadcrumb">
            <li><a href="#">Trang chủ</a></li>
            <li><a href="#">Đơn hàng</a></li>
        </ol>

    </div>

    <div id="page-inner">

        <div class="row">
            <div class="col-md-12">
                <!-- Advanced Tables -->
                <div class="card">
                    <div class="card-action">
                        Danh sách Đơn đặt hàng
                    </div>
                    <div class="card-content">
                        <div class="row">
                            <a class="waves-effect waves-light btn" href="@Url.Action("Create", "DonHang")"><i class="material-icons right">add</i>Thêm mới</a>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã đơn hàng</th>
                                        <th>Mã KH</th>
                                        @*<th>sản phẩm</th>*@
                                        <th>Ngày tạo đơn</th>
                                        <th>Trạng thái</th>
                                        <th>Tác vụ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@Html.DisplayFor(modeliteam => item.IdOder)</td>
                                        <td>@Html.DisplayFor(modeliteam => item.IdCustomer)</td>
                                        @*<td>@Html.DisplayFor(modeliteam => item.Product.Name)</td>*@
                                        <td>@Html.DisplayFor(modeliteam => item.Date)</td>
                                        <td>@(item.Status.Value == 0 ? item.Status.Value.ToString("Đơn hàng chưa xác nhận"):"Đã xác nhận")</td>
                                        @if (item.Status.Value == 0)
                                        {
                                            <td class="center">
                                                @Html.ActionLink("Xác nhận", "Edit", new { id = item.IdOder }) |

                                                @*Xóa bảng dùng ajax*@
                                                @Ajax.ActionLink("Xóa", "Delete", new { id = item.IdOder }, new AjaxOptions
                                                {
                                                    Confirm = "Xóa dòng này dữ liệu sẽ mất và không thể khôi phục",
                                                    OnComplete = "$('#row_" + @item.IdOder + "').remove()",
                                                    HttpMethod = "Delete"
                                                })
                                            </td>
                                        }
                                        else
                                        {
                                            <td class="center">
                                                @*Xóa bảng dùng ajax*@
                                                @Ajax.ActionLink("Xóa", "Delete", new { id = item.IdOder }, new AjaxOptions
                                                {
                                                    Confirm = "Xóa dòng này dữ liệu sẽ mất và không thể khôi phục",
                                                    OnComplete = "$('#row_" + @item.IdOder + "').remove()",
                                                    HttpMethod = "Delete"
                                                })
                                            </td>
                                        }

                                    </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!--End Advanced Tables -->
            </div>
        </div>
    </div>
    <!-- /. PAGE INNER  -->
</div>
