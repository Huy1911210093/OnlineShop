@model IEnumerable<OnlineShop.Models.Product>


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="header">
        <h1 class="page-header">
            Cá
        </h1>
        <ol class="breadcrumb">
            <li><a href="#">Trang chủ</a></li>
            <li><a href="#">Sản phẩm</a></li>
            <li class="active">Cá</li>
        </ol>

    </div>

    <div id="page-inner">

        <div class="row">
            <div class="col-md-12">
                <!-- Advanced Tables -->
                <div class="card">
                    <div class="card-action">
                        Danh sách sản phẩm cá
                    </div>

                    <div class="card-content">

                        <div class="row">

                            <a class="waves-effect waves-light btn" href="@Url.Action("Create", "QuanLyCa")"><i class="material-icons right">add</i>Thêm</a>
                            @*<a class="waves-effect waves-light btn" href="@Url.Action("Delete","QuanLyCa")"><i class="material-icons right">delete</i>Xóa</a>
                            <a class="waves-effect waves-light btn" href="@Url.Action("Edit","QuanLyCa")"><i class="material-icons right">edit</i>Sửa</a>*@
                        </div>
                        <div class="table-responsive">

                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Nhóm</th>
                                        <th>Tên sp</th>
                                        <th>Giá</th>
                                        <th>Ngày tạo</th>
                                        <th>Ảnh</th>
                                        <th>Số lượng</th>
                                        <th>Size</th>
                                        <th>Chi tiết</th>
                                        <th>Tác vụ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        //while (item.GroupProduct.IdGroupProduct < 6)
                                        //{
                                    <tr class="odd gradeX">
                                        <td> @Html.DisplayFor(modelItem => item.GroupProduct.Name)</td>
                                        <td>  @Html.DisplayFor(modelItem => item.Name)</td>
                                        <td class="center">@Html.DisplayFor(modelItem => item.Price)</td>
                                        <td class="center"> @Html.DisplayFor(modelItem => item.Date)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Image)</td>
                                        <td class="center">@Html.DisplayFor(modelItem => item.Status)</td>
                                        <td class="center">@Html.DisplayFor(modelItem => item.Size)</td>
                                        <td class="center">@Html.DisplayFor(modelItem => item.Detail)</td>
                                        <td class="center">
                                            @*<a class="waves-effect waves-light btn" id = @(item.IdProduct) href="@Url.Action("Edit","QuanLyCa")"><i class="material-icons right">edit</i>Sửa</a>*@
                                            @Html.ActionLink("Edit","Edit" ,"QuanLyCa",null ,new { @class = "waves-effect waves-light btn", id = item.IdProduct })
                                            @Html.ActionLink("Xóa", "Delete",null,new { @class = "waves-effect waves-light btn", id = item.IdProduct })
                                            @*<a class="waves-effect waves-light btn" href="@Url.Action("Delete","QuanLyCa")">Xóa</a>*@
                                        </td>
                                    </tr>
                                        //}

                                     }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                <!--End Advanced Tables -->
            </div>
        </div>
    </div>
    <!-- /. PAGE INNER  -->
</div>

<h2>Index</h2>



