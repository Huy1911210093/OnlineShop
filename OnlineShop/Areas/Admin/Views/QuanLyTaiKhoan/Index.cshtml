@*@model IEnumerable<OnlineShop.Models.UserAccount>*@
@model PagedList.IPagedList<OnlineShop.Models.UserAccount>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="header">
        <h1 class="page-header">
            Tài khoản
        </h1>
        <ol class="breadcrumb">
            <li><a href="#">Trang chủ</a></li>
            <li><a href="#">Quản lý tài khoản</a></li>
        </ol>

    </div>

    <div id="page-inner">

        <div class="row">
            <div class="col-md-12">
                <!-- Advanced Tables -->
                <div class="card">
                    <div class="card-action">
                        Danh sách tài khoản
                    </div>
                    <div class="card-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Email</th>
                                        <th>Password</th>
                                        <th>Họ</th>
                                        <th>Tên</th>
                                        <th>SDT</th>
                                        <th>Ngày tạo</th>
                                        <th>Tác vụ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modeliteam => item.Email)</td>
                                            <td>@Html.DisplayFor(modeliteam => item.Password)</td>
                                            <td>@Html.DisplayFor(modeliteam => item.FirstName)</td>
                                            <td>@Html.DisplayFor(modeliteam => item.LastName)</td>
                                            <td>@Html.DisplayFor(modeliteam => item.Phone)</td>
                                            <td>@Html.DisplayFor(modeliteam => item.CreatedDay)</td>
                                            <td class="center">
                                                @Html.ActionLink("Sửa", "Edit", new { id = item.IdUser }) |

                                                @*Xóa bảng dùng ajax*@
                                                @Ajax.ActionLink("Xóa", "Delete", new { id = item.IdUser }, new AjaxOptions
                                                {
                                                    Confirm = "Xóa dòng này dữ liệu sẽ mất và không thể khôi phục",
                                                    OnComplete = "$('#row_" + @item.IdUser + "').remove()",
                                                    HttpMethod = "Delete"
                                                })
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                            @Html.PagedListPager(Model, page => @Url.Action("Index", new { page }))
                        </div>
                    </div>
                </div>
                <!--End Advanced Tables -->
            </div>
        </div>
    </div>
    <!-- /. PAGE INNER  -->
</div>
