                                <li><button class="minus"><i class="fa fa-minus" aria-hidden="true"></i></button></li>
                                <li><input type="text" value="01" class="qty"></li>
                                <li><button class="add"><i class="fa fa-plus" aria-hidden="true"></i></button></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="row">
                        <div class="add-to-cart">
                            <a href="#" class="template-button"><i class="fa fa-shopping-bag marR10" aria-hidden="true"></i>Thêm vào giỏ</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="row">
                        <div class="product-ability">
                            <p><strong>mã sản phẩm</strong> : <span>dpc001</span></p>
                            <p><strong>Còn</strong> : <span>2</span></p>
                            <p><strong>loại</strong> : loại cá</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
