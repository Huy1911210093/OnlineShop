                            <p>
                                <label>Họ tên</label>
                                <input type="text" placeholder="Nhập họ tên...">
                            </p>
                            <p>
                                <label>email</label>
                                <input type="text" placeholder="Nhập email...">
                            </p>
                            <p>
                                <label>Số điện thoại</label>
                                <input type="text" placeholder="Nhập sdt...">
                            </p>
                            <p>
                                <label>góp ý</label>
                                <textarea cols="10" rows="5" placeholder="Nhập tin nhắn" style="resize: none;"></textarea>
                            </p>
                            <a href="#" class="template-button">Gửi góp ý</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
