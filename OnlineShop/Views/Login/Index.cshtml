@model OnlineShop.Models.UserAccount


@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="breadcrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="page-heading">
                        <div class="page-header-heading padB10">
                            <h3>Đăng nhập</h3>
                        </div>
                        <div class="breadcrum-box">
                            <ul class="breadcrum">
                                <li><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                                <li class="active"><a href="#">Đăng nhập</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--//================Breadcrumb section end==============//-->
<!--//================Your account section start==============//-->
<div class="account-box padTB60">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    <form class="login-form">
                        @Html.AntiForgeryToken()
                        <div class="login-box" id="loginbox">
                            <h4>Đăng nhập</h4>
                            <div class="form-group">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @if (ViewBag.Success != null)
                                {
                                    <div class="alert alert-success">@ViewBag.Success</div>
                                }
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.DisplayNameFor(m=>m.Email)
                                @*@Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.DisplayNameFor(m => m.Password)
                                @*@Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                <div class="col-md-10">
                                    @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <p><a class="view-password"><i>quên mật khẩu?</i></a></p>

                            <input type="submit" value="Đăng Nhập" class="template-button" />
                        </div>

                        <div class="forget-password" style="display:none;" id="forget">
                            <h4>Đặt lại mật khẩu</h4>
                            <p>Chúng tôi sẽ gửi đến bạn 1 email để đặt lại mật khẩu</p>
                            <from class="login-form">
                                <label>email</label>
                                <input type="text" placeholder="Nhập email">
                            </from>
                            <p><a class="template-button">Gửi</a></p>
                            <p class="backto"><a class="template-button"><i class="fa fa-long-arrow-left marR10" aria-hidden="true"></i>Trở về trang đăng nhập</a></p>
                        </div>

                    </form>
                }
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="loginForm">
                    <div class="create-account">
                        <h4>Tạo tài khoản</h4>
                        <p>Bằng cách tạo tài khoản trên trang web của chúng tôi, bạn sẽ có thể mua sắm nhanh hơn, cập nhật tình trạng đơn hàng và theo dõi các đơn hàng bạn đã thực hiện trước đó.</p>
                        <a href="@Url.Action("Index","Register/Register")" class="template-button"><i class="fa fa-user marR10" aria-hidden="true"></i>Tạo một tài khoản</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
