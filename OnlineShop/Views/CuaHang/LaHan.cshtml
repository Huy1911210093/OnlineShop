@model IEnumerable<OnlineShop.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--//================Breadcrumb section start==============//-->
<section>
    <div class="breadcrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="page-heading">
                        <div class="page-header-heading padB10">
                            <h3>CỬA HÀNG</h3>
                        </div>
                        <div class="breadcrum-box">
                            <ul class="breadcrum">
                                <li><a href="index.html">trang chủ</a></li>
                                <li><a href="#">cửa hàng</a></li>
                                <li class="active"><a href="#">La Hán</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--//================Breadcrumb section end==============//-->
<div class="product-collection-section padTB60">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="per-page-pdoduct">
                    <div class="row">
                        <div class="col-md-4 col-sm-4 col-xs-12">
                            <div class="shot_by list-item-product">
                                <select name="featured">
                                    <option value="">Theo</option>
                                    <option value="2">Giá thấp > cao</option>
                                    <option value="3">Giá cao > thấp</option>
                                </select>
                                <p>Sắp xếp</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="best_product" id="collection_box">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="row">
                                @foreach (var item in Model)
                                {
                                    <div class="col-md-4 col-sm-6 col-xs-12 marB30">
                                        <div class="arrival-image">
                                            <div class="arrival-image-overlay">
                                                <figure>
                                                    <span class="overlay-two"></span>
                                                    <img src="~/Content/assets/images/best-product/@item.Image" alt="">
                                                    <figcaption>
                                                        <ul class="cart-icon">
                                                            <li><a href="#"><span class="add-to-wish">Thêm vào giỏ</span><i class="fa fa-shopping-bag" aria-hidden="true"></i></a></li>
                                                            <li><a href="#"><span class="add-to-wish">Mua ngay</span><i class="fa fa-money" aria-hidden="true"></i></a></li>
                                                            <li><a href="#" data-toggle="modal" data-target="#myModal"><span class="add-to-wish">Xem nhanh</span><i class="fa fa-eye" aria-hidden="true"></i></a></li>
                                                        </ul>
                                                    </figcaption>
                                                </figure>
                                            </div>
                                            <div class="arrival-image-content">
                                                <h4><a href="product-detail.html">@item.Name</a></h4>
                                                <span>@item.Price</span>
                                            </div>
                                        </div>
                                    </div>
                                }


                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="blog-pagination">
                                        <nav aria-label="Page navigation">
                                            <ul class="pagination">
                                                <li>
                                                    <a href="#" aria-label="Previous">
                                                        <i class="fa fa-angle-left" aria-hidden="true"></i>
                                                    </a>
                                                </li>
                                                <li><a href="#">1</a></li>
                                                <li><a href="#">2</a></li>
                                                <li><a href="#">3</a></li>
                                                <li><a href="#">4</a></li>
                                                <li><a href="#">5</a></li>
                                                <li>
                                                    <a href="#" aria-label="Next">
                                                        <i class="fa fa-angle-right" aria-hidden="true"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </nav>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

