@model List<OnlineShop.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<!--//================Breadcrumb section start==============//-->  
<section>
    <div class="breadcrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="page-heading">
                        <div class="page-header-heading padB10">
                            <h3>Giỏ hàng</h3>
                        </div>
                        <div class="breadcrum-box">
                            <ul class="breadcrum">
                                <li><a href="index-2.html">Trang chủ</a></li>
                                <li class="active"><a href="#">Giỏ hàng</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--//================Breadcrumb section end==============//-->
<!--//================Cart section start==============//-->


<div class="content">
    <div class="section group">
        @if (Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <td>Mã Sản Phẩm</td>
                        <td>Tên Sản Phẩm</td>
                        <td>Ảnh Sản Phẩm</td>
                        <td>Số lượng</td>
                        <td>Size</td>
                        <td>Đơn giá</td>
                        <td>Thành tiền</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.Product.IdProduct</td>
                            <td>@item.Product.Name</td>
                            <td><img src="~/Content/assets/images/best-product/@item.Product.Image" width="100" /></td>
                            <td><input type="text" class="txtQuantity" data-id="@item.Product.IdProduct" value="@item.Quantity" /></td>
                            <td>@item.Product.Size</td>
                            <td>@item.Product.Price.GetValueOrDefault(0).ToString("N0")</td>
                            <td>@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0"))</td>
                            <td><a href="#" data-id="@item.Product.IdProduct" class="btn-delete"><i class="fa fa-times" aria-hidden="true"></i></a></td>
                        </tr>
                    }

                </tbody>
            </table>



            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="row">
                    <div class="product-heading-title coupon-button padTB15">
                        <div class="col-md-6 col-sm-8 col-xs-12">

                        </div>
                        <div class="col-md-6 col-sm-8 col-xs-12">
                            <button id="btnContinue" class="btn">Tiếp tục mua hàng</button>
                            <button id="btnUpdate" class="btn">Cập nhật giỏ hàng</button>
                            <button id="btnDeleteAll" class="btn">Xoá giỏ hàng</button>
                            <button id="btnPayment" class="btn">Thanh toán</button>
                        </div>
                    </div>
                </div>
            </div>


        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <td>Mã Sản Phẩm</td>
                        <td>Tên Sản Phẩm</td>
                        <td>Ảnh Sản Phẩm</td>
                        <td>Số lượng</td>
                        <td>Size</td>
                        <td>Đơn giá</td>
                        <td>Thành tiền</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    <td class="alert alert-danger">Chưa có sản phẩm nào trong giỏ hàng</td>


                </tbody>
            </table>
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="row">
                    <div class="product-heading-title coupon-button padTB15">
                        <div class="col-md-6 col-sm-8 col-xs-12">

                        </div>
                        <div class="col-md-6 col-sm-8 col-xs-12">
                            <button id="btnContinue" class="btn">Tiếp tục mua hàng</button>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

